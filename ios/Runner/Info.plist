<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>CFBundleDevelopmentRegion</key>
	<string>$(DEVELOPMENT_LANGUAGE)</string>
	<key>CFBundleDisplayName</key>
	<string>Visiaxx</string>
	<key>CFBundleExecutable</key>
	<string>$(EXECUTABLE_NAME)</string>
	<key>CFBundleIdentifier</key>
	<string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
	<key>CFBundleInfoDictionaryVersion</key>
	<string>6.0</string>
	<key>CFBundleName</key>
	<string>visiaxx</string>
	<key>CFBundlePackageType</key>
	<string>APPL</string>
	<key>CFBundleShortVersionString</key>
	<string>$(FLUTTER_BUILD_NAME)</string>
	<key>CFBundleSignature</key>
	<string>????</string>
	<key>CFBundleVersion</key>
	<string>$(FLUTTER_BUILD_NUMBER)</string>
	<key>LSRequiresIPhoneOS</key>
	<true/>
	<key>UILaunchStoryboardName</key>
	<string>LaunchScreen</string>
	<key>UIMainStoryboardFile</key>
	<string>Main</string>
	<key>UISupportedInterfaceOrientations</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>
	<key>UISupportedInterfaceOrientations~ipad</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationPortraitUpsideDown</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>
	<key>CADisableMinimumFrameDurationOnPhone</key>
	<true/>
	<key>UIApplicationSupportsIndirectInputEvents</key>
	<true/>
	<key>UIStatusBarHidden</key>
	<true/>
	<key>UIViewControllerBasedStatusBarAppearance</key>
	<false/>
	
	<!-- âœ… REQUIRED PERMISSIONS - ADDED BELOW -->
	
	<!-- Microphone Permission (CRITICAL for Speech Recognition) -->
	<key>NSMicrophoneUsageDescription</key>
	<string>This app needs microphone access to perform voice-controlled vision tests. Your responses help us measure your visual acuity accurately.</string>
	
	<!-- Speech Recognition Permission (CRITICAL for Speech-to-Text) -->
	<key>NSSpeechRecognitionUsageDescription</key>
	<string>This app uses speech recognition to verify your test responses during vision assessments.</string>
	
	<!-- Camera Permission (for Distance Detection) -->
	<key>NSCameraUsageDescription</key>
	<string>This app uses the camera to monitor your testing distance and ensure accurate results.</string>
	
	<!-- Photo Library (if you need to save/access images) -->
	<key>NSPhotoLibraryUsageDescription</key>
	<string>This app may save test results and reports to your photo library.</string>
	
	<key>NSPhotoLibraryAddUsageDescription</key>
	<string>This app saves PDF reports of your vision test results.</string>
	
	<!-- Background Modes (if needed for audio processing) -->
	<key>UIBackgroundModes</key>
	<array>
		<string>audio</string>
		 <string>youtube</string>
        <string>vnd.youtube</string>
        <string>https</string>
        <string>http</string>
		<string>mailto</string>
		<string>remote-notification</string>
	</array>
</dict>
</plist>